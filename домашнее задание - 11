using namespace std;
#include <iostream>

void showNum(int num, int degree) {
	cout << pow(num, degree);
}

int numSum(int num1, int num2) {
	int summ = 0;
	if (num1 > num2) swap(num1, num2);
	for (int i = num1; i <= num2; i++) {
		summ += i;
	}
	return summ;
}

void numSer(int num1, int num2) {
	if (num1 > num2) swap(num1, num2);
	for (int i = num1; i <= num2; i++) {
		int sum = 0;
		for (int j = 1; j < i; j++) if (i % j == 0) sum += j;
		if (sum == i) cout << i << " ";
	}
}

void numPoker() {
	char card, symb;
	int choice;

	cout << "card: ";
	cin >> card;
	cout << endl << "choice card symbol: 1-pik,2-peasants,3-peasants,4-gut: ";
	cin >> choice;
	switch (choice)
	{
	case 1:
		symb = '♠';
		break;
	case 2:
		symb = '♣';
		break;
	case 3:
		symb = '♦';
		break;
	case 4:
		symb = '♥';
		break;
	default:
		break;
	}

	cout << endl;
	for (int j = 0; j <= 10; j++) {
		if (j == 0 || j == 10) {
			for (int i = 0; i < 10; i++) {
				cout << "-";
			}
			cout << endl;
		}
		else if (j == 5) {
			for (int i = 0; i < 10; i++) {
				if (i == 5) cout << card;
				else if (i == 0 || i == 9) cout << "-";
				else cout << " ";
			}
			cout << endl;
		}
		else if (j == 1) {
			for (int i = 0; i < 10; i++) {
				if (i == 8) cout << symb;
				else if (i == 0 || i == 9) cout << "-";
				else cout << " ";
			}
			cout << endl;
		}
		else if (j == 9) {
			for (int i = 0; i < 10; i++) {
				if (i == 1) cout << symb;
				else if (i == 0 || i == 9) cout << "-";
				else cout << " ";
			}
			cout << endl;
		}
		else {
			for (int i = 0; i <= 10; i++) {
				if (i == 0 || i == 9) cout << "-";
				else cout << " ";
			}
			cout << endl;
		}
	}
}

void numClever(int num) {
	if (num % 10 + num % 100 / 10 + num % 1000 / 100 == num / 100000 + num / 10000 % 10 + num / 1000 % 10) cout << "clever";
	else cout << "not clever";
}

